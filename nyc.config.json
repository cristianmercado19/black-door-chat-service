
{
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "lib/**/*.spec.ts",
    "lib/**/*.interface.ts",
    "dist"
  ],
  "extension": [
    ".ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  },
  "reporter": [
    "text",
    "text-summary",
    "html"
  ],
  "all": true,
  "sourceMap": true,
  "instrument": true
}